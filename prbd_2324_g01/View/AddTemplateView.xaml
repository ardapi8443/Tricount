<Window x:Class="prbd_2324_g01.View.AddTemplateView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:prbd_2324_g01.ViewModel"
        Title="Add Template" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:AddTemplateViewModel x:Name="vm"/>
    </Window.DataContext>
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Title: " VerticalAlignment="Center"/>
            <TextBox x:Name="TitleTextBox" Width="200"/>
        </StackPanel>
        
        <ListView x:Name="UsersListView" ItemsSource="{Binding TemplateItems}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="False" Content="{Binding UserName}" />
                        <TextBox  Width="50" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="AddButton" Content="Add" Width="75" Margin="0,0,5,0" />
            <Button x:Name="CancelButton" Content="Cancel" Width="75" />
        </StackPanel>
    </StackPanel>
</Window>